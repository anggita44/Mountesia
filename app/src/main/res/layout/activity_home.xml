<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".HomeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="42dp"
    android:text="Choose ur
Mountain"
    android:layout_marginTop="22dp"
    android:textAlignment="center"
    android:textColor="#fff"
    android:fontFamily="@font/alenor"
    android:textSize="38dp"


    />

    <TextView
        android:id="@+id/username"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Choose ur
Mountain"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="12dp"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/gunung1"
        android:layout_marginHorizontal="75dp"


       >

        <RelativeLayout
            android:id="@+id/jawa_tengah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_jawa_tengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="75dp"
                android:fontFamily="@font/alenor"
                android:text="Jawa Tengah"
                android:textColor="#fff"
                android:textSize="28dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/gunung2"
        android:layout_marginHorizontal="75dp"


        >

        <RelativeLayout
            android:id="@+id/jawa_timur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_jawa_timur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="75dp"
                android:fontFamily="@font/alenor"
                android:text="Jawa Timur"
                android:textColor="#fff"
                android:textSize="28dp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/gunung3"
        android:layout_marginHorizontal="75dp"


        >

        <RelativeLayout
            android:id="@+id/jawa_barat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_jawa_barat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="75dp"
                android:fontFamily="@font/alenor"
                android:text="Jawa Barat"
                android:textColor="#fff"
                android:textSize="28dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#202020"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:src="@drawable/home_24px_outlined"
            />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:src="@drawable/share_24px_outlined"
            />
    </LinearLayout>
</RelativeLayout>